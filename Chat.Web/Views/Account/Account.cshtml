@using Chat.Web.Models

@{
    ViewBag.Title = "Account page";
}
@model AccountViewModel

<script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>

<div class="account-container">
    <div class="forms-container">
        <div class="signin-signup">

            @using (Html.BeginForm("Account", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "sign-in-form", @class = "sign-in-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <img style="align-self: center; margin-bottom: 3em;" src="~/Content/logo.png" width="300">
                <style>
                    ul {
                        list-style-type: none;
                    }
                </style>
                @Html.ValidationSummary(true, "", new { @style = "color:red;" })
                <h2 class="title">Sign in</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    @Html.TextBoxFor(m => m.LoginVM.Username, new { @type = "text", @placeholder = "Username" })
                    @Html.ValidationMessageFor(m => m.LoginVM.Username, "", new { @class = "text-danger" })
                </div>
                <div id="e1" style="color:red; display:none;">The username field is required</div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    @Html.PasswordFor(m => m.LoginVM.Password, new { @placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.LoginVM.Password, "", new { @class = "text-danger" })
                </div>
                <div id="e2" style="color:red; display:none;">The password field is required</div>
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.LoginVM.RememberMe)
                            @Html.LabelFor(m => m.LoginVM.RememberMe)
                        </div>
                    </div>
                </div>
                <input type="hidden" name="type" value="1" />
                <input type="button" id="SignInSubmit" value="Sign in" class="btn solid" />

            }
            @using (Html.BeginForm("Account", "Account", FormMethod.Post, new { @id = "sign-up-form", @class = "sign-up-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <img style="align-self: center; margin-bottom: 1em;" src="~/Content/logo.png" width="300">
                <h2 class="title">Sign up</h2>
                <style>
                    ul {
                        list-style-type: none;
                    }
                </style>
                @Html.ValidationSummary("", new { @style= "color:red; " })
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    @Html.TextBoxFor(m => m.RegisterVM.Username, new { @placeholder = "Username" })
                </div>
                <div id="e3" style="color:red; display:none;">The username field is required</div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    @Html.TextBoxFor(m => m.RegisterVM.DisplayName, new { @class = "form-control", @placeholder = "Display Name" })
                </div>
                <div id="e4" style="color:red; display:none;">The display name field is required</div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    @Html.PasswordFor(m => m.RegisterVM.Password, new { @placeholder = "Password" })
                </div>
                <div id="e5" style="color:red; display:none;">The password field is required</div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    @Html.PasswordFor(m => m.RegisterVM.ConfirmPassword, new { @placeholder = "Confirm Password" })
                </div>
                <div id="e6" style="color:red; display:none;">The password field is required</div>
                <div id="e7" style="color:red; display:none;">Passwords do not match</div>
                <p class="social-text">Pick your avatar</p>
                <div class="social-media">
                    <label class="social-icon">
                        @Html.RadioButtonFor(m => m.RegisterVM.Avatar, "0", new { @checked = true })
                        <img src="~/Content/icons/avatar1.png" alt="" />
                    </label>
                    <label class="social-icon">
                        @Html.RadioButtonFor(m => m.RegisterVM.Avatar, "1")
                        <img src="~/Content/icons/avatar2.png" alt="" />
                    </label>
                    <label class="social-icon">
                        @Html.RadioButtonFor(m => m.RegisterVM.Avatar, "2")
                        <img src="~/Content/icons/avatar3.png" alt="" />
                    </label>
                    <label class="social-icon">
                        @Html.RadioButtonFor(m => m.RegisterVM.Avatar, "3")
                        <img src="~/Content/icons/avatar4.png" alt="" />
                    </label>
                </div>
                <br>
                <input type="hidden" name="type" value="2" />
                <input type="button" id="SignUpSubmit" class="btn" value="Sign up" />
            }
        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>New to DURC?</h3>
                <p>
                    DELETE your worries.
                    UPDATE your groups on all the new happenings.<br>
                    REACH out to anyone instantly.
                    And CREATE wonderful memories!
                </p>
                <button class="btn transparent" id="sign-up-btn">
                    SIGN UP NOW!
                </button>
            </div>
            <img src="~/Content/log.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
            <div class="content">
                <h3>Group chats? DMs? Now sorted for you!</h3>
                <p>
                    DELETE your worries.
                    UPDATE your groups on all the new happenings.<br>
                    REACH out to anyone instantly.
                    And CREATE wonderful memories!<br><br>
                    Already have an account?
                </p>
                <button class="btn transparent" id="sign-in-btn">
                    SIGN IN
                </button>
            </div>
            <img src="~/Content/register.svg" class="image" alt="" />
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>


    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/account.js")
    @Styles.Render("~/Content/style.css")
